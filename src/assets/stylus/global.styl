@import 'fonts.styl'

h1,h2,h3,h4,p {
  font-family: "StrangerFont-Condensed";
}

.logo {
  position: absolute;
  background-image: url('../images/logo.png');
  background-repeat: no-repeat;
  background-size: contain;
  width: 20%;
  height: 0;
  padding-bottom: 5%;
  z-index: 10;
  top: 5%;
  left: 15%;
}

nav {
  position: absolute;
  top: 5%;
  right: 15%;
}
ul {
  list-style-type: none;
  z-index: 10;
  display: inline-block;
  float: right;
}

ul li {
  display: inline-block;
  padding-left: 20px;
}

ul li a {
  
}

ul li a {
  font-family: 'Lucida Console';
  color: #B3B3B3;
  text-decoration: none;
  opacity: .8;
  transition: all ease-in .25s;
}

ul li.active a{
  color: #fff;
  opacity: 1;
}

.screen
  width 100%
  height 0
  padding-bottom 100%

.meme__form{
  top: 25%;
  position: absolute;
  width: 100%;
}

.meme__custom {
  display: none;
  position: relative;
  margin: 80px auto;
  width: 744px;
  z-index: 15;
}

.wrapper {
  width: 100%;
  height: 100%;
  background-image: url('../images/background.png');
  background-repeat: no-repeat;
  background-position: center 0;
  background-size: 80%;
}

form {
  text-align: center;
}
.form__wrapper {
  margin: 0 auto 10px;
  width: 40%;
}
input {
  font-size: 1.8vw;
  padding: 10px;
  width: 100%;
  background-color: rgba(0,0,0,.7);
  color: #E1DEC8;
  font-family: "Lucida Console";
}

.close {
  position: absolute;
  right: 0;
  border: 1px solid #fff;
  font-size: 48px;
  color:#fff;
}
